<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#01949A"
    >
    
       <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_margin="10dp"
        android:id="@+id/textViewCC"/>



       <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connectivity "
        android:id="@+id/buttonCC"
        android:layout_margin="10dp"
        android:background="@color/colorAccent"
        android:textColor="#0C1446"
        
        android:backgroundTint="#DB1F48"/>
    
       <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_margin="10dp"
        android:id="@+id/textViewCCP"/>



       <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connectivity Profile"
        android:id="@+id/buttonCCP"
        android:layout_margin="10dp"
        android:background="@color/colorAccent"
        android:textColor="#0C1446"
        android:backgroundTint="#DB1F48"
        />
</LinearLayout>